{
  "name": "hono-mdx",
  "version": "0.1.0",
  "description": "Hono JSX support for MDX with Cloudflare Workers integration",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"*.{md,mdx}\"",
    "prepublishOnly": "pnpm run build",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy"
  },
  "keywords": [
    "hono",
    "mdx",
    "jsx",
    "cloudflare-workers",
    "react"
  ],
  "author": "AI Primitives",
  "license": "MIT",
  "homepage": "https://github.com/ai-primitives/hono-mdx#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-primitives/hono-mdx.git"
  },
  "bugs": {
    "url": "https://github.com/ai-primitives/hono-mdx/issues"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.0",
    "esbuild-wasm": "^0.20.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@eslint/js": "^9.17.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "hono": "^4.6.14",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.28.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
