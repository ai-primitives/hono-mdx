{
  "name": "hono-mdx",
  "version": "0.1.0",
  "description": "Hono JSX support for MDX via @mdx-js/react",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"*.{md,mdx}\"",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "hono",
    "mdx",
    "jsx",
    "cloudflare",
    "workers"
  ],
  "author": "AI Primitives",
  "license": "MIT",
  "homepage": "https://mdx.org.ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-primitives/hono-mdx.git"
  },
  "bugs": {
    "url": "https://github.com/ai-primitives/hono-mdx/issues"
  },
  "dependencies": {
    "esbuild-wasm": "^0.17.19",
    "hono": "^3.11.7",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/standalone": "^7.26.4",
    "@cloudflare/workers-types": "^4.20231218.0",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "hono": "^3.11.7",
    "react": "^18.2.0"
  }
}
